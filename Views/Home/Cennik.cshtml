@model FotoDB_WPA.Models.CennikPlansWystawy;

@{
    ViewData["Title"] = "Cennik";
}

<h1>Cennik</h1>

<div class="text-center">
    <div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Cennik ekspozycji</h1>
    </div>
    <div class="container">
        <div class="card-deck mb-3 text-center">

            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h3 class="my-0 font-weight-normal">@Model.PermanentPlanWystawy.Name</h3>
                </div>
                <div class="card-body">
                    <h4 class="card-title">
                        @Model.PermanentPlanWystawy.Price PLN
                        <small class="text-muted"> / osoba</small>
                    </h4>
                    <ul class="list-unstyled mt-3 mb-4">
                        @foreach (var eksponat in Model.PermanentPlanWystawy.Eksponats)
                        {
                            <li>@eksponat.Title - @eksponat.Value</li>
                        }
                    </ul>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-lg btn-block btn-primary">Kup teraz</button>
                </div>
            </div>

            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h3 class="my-0 font-weight-normal">@Model.TemporaryPlanWystawy.Name</h3>
                </div>
                <div class="card-body">
                    <h4 class="card-title">
                        @Model.TemporaryPlanWystawy.Price PLN
                        <small class="text-muted"> / osoba</small>
                    </h4>
                    <ul class="list-unstyled mt-3 mb-4">
                        @foreach (var eksponat in Model.TemporaryPlanWystawy.Eksponats)
                        {
                            <li>@eksponat.Title - @eksponat.Value</li>
                        }
                    </ul>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-lg btn-block btn-primary">Kup teraz</button>
                </div>
            </div>

            <div class="card mb-4 box-shadow">
                <div class="card-header">
                    <h3 class="my-0 font-weight-normal">@Model.CustomPlanWystawy.Name - Skarbiec</h3>
                </div>
                <div class="card-body">
                    <h4 class="card-title">
                        5 PLN
                        <small class="text-muted"> / osoba</small>
                    </h4>
                    <ul class="list-unstyled mt-3 mb-4">
                        @foreach (var eksponat in Model.CustomPlanWystawy.Eksponats)
                        {
                            <li>@eksponat.Title - @eksponat.Value</li>
                        }
                    </ul>                    
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-lg btn-block btn-primary">Kup teraz</button>
                </div>
            </div>

        </div>
    </div>
</div>